/* 没有地址布局 */
.box{
    margin: 10px auto;
    padding: 20px 0px 20px 0px;
    width: 347px;
    line-height: 20px;
    opacity: 0.85;
    background-color: rgba(255, 255, 255, 79);
    color: rgba(16, 16, 16, 100);
    font-size: 14px;
    box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.4);
    font-family: Arial;
    border: 1px solid rgba(255, 255, 255, 100);
}
.address-none{
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100vh;
  }

  .none-content{
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .none-content image{
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 30rpx;
  }
  .none-content .txt{
    font-size: 26rpx;
    color: #999;
  }
  
  /* 添加按钮 */
  .add-address {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 90rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #f5f5f5;
  }
  .add-address .txt{
    width: 60vw;
    height: 75rpx;
    margin-bottom: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1rpx solid #ff6700;
    background-origin: 5rpx;
    font-size: 26rpx;
    color: #ff6700;
  }
  
  /* 地址列表 */
  .address-list {
    display: flex;
    flex-direction: column;
  }
  .address-item {
    text-align: left;
    display: flex;
    flex-direction: column;
    margin: 6rpx 20rpx;
    padding: 20rpx 20rpx 20rpx 20rpx;
    border-radius: 10rpx;
    background: #fff;
  }
  .item-top {
    padding: 0 10px;
    font-size: 36rpx;
    color: #333;
    margin-bottom: 10px;
  }
  .item-content {
    padding: 0 10px;
    font-size: 30rpx;
    color: #999;
    padding-bottom: 20rpx;
    margin-bottom: 20rpx;
    border-bottom: 1rpx solid #dcdcdc;
  }
  .item-bottom {
    display: flex;
    justify-content: space-between;
    font-size: 24rpx;
    color: #999;
  }
  .item-bottom .right{
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }
  .item-bottom .right .txt{
    padding: 0 10rpx;
  }