/* pages/order/order.wxss */
.all-layout {
    background: white;
    font-size: 18px;
}

.swiper {
    width: 100%;
    height: 50px;
    display: flex;
}

.swiper-tab {
    width: 100%;
    display: flex;
    align-self: center;
    justify-content: space-around;
}

.swiper-image {
    width: 10%;
    align-self: center;
}

.swiper-img {
    width: 20px;
    height: 20px;
    float: right;
}

.on {
    border-bottom: 2px solid red;
    color: red;
}

.swiper-tab-list {
    /* margin: 0 30px; */
    padding: 12px 2px;
}


/*订单列表*/
.swiper-box {
    /* background: #efefef; */
    height: 100vh;
}

.orderDetails {
    margin: 6px auto;
    width: 347px;
    height: 136px;
    background-color: rgba(255, 255, 255, 79);
    color: rgba(16, 16, 16, 100);
    font-size: 14px;
    text-align: center;
    box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.4);
    font-family: Arial;
    border: 1px solid rgba(255, 255, 255, 100);
}

