.orderListTitle {
    height: 50px;
    line-height: 50px;
    border-bottom: 1px solid #BEBEBE;
}

.orderListTitle .userName {
    padding-right: 25px;
    margin-left: 10px;
}

.orderListTitle .orderStatus {
    float: right;
    margin-right: 10px;
    color: #2f7b27;
    font-size: 16px;
}

.orderListDetails {
    display: flex;
    height: 48px;

}

.orderListDetails .productImg {
    flex: 1;
    height: 90px;
    width: 120px;
    margin-top: 10px;
    margin-left: 10px;
}

.orderListDetails .productImg image {
    width: 100px;
    height: 100px;
}

.orderListDetails .productInfo {
    width: 100%;
    display: flex;
    /* display: flex; */
    justify-content: space-around;
    font-size: 22px;
    margin-top: 10px;
}

.orderListDetails .productInfo .productTitle {
    /* font-size: 15px; */
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin-bottom: 10px;
}

.productCount {
    line-height: 40px;
}

.productCount>view {
    float: right;
    margin-right: 15px;
}

.payment-btn,
.remind-btn {
    height: 15px;
    padding: 5px 10px;
    border: 1px solid red;
    border-radius: 12px;
    color: red;
    display: flex;
    align-items: center;
    justify-content: center;
}

image {
    width: 34px;
    height: 34px;
}